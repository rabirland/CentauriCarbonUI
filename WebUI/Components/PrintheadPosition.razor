<svg viewBox="0 0 256 256" style="width: 100%">
	@* Draw grid *@
	@for(int i = 0; i < 6; i++)
	{
		<line x1="@((256 / 5) * i)" y1="0" x2="@((256 / 5) * i)" y2="256" stroke-width="0.2" stroke="var(--bs-card-border-color)" />
		<line x1="0" y1="@((256 / 5) * i)" x2="256" y2="@((256 / 5) * i)" stroke-width="0.2" stroke="var(--bs-card-border-color)" />
	}

	@* Draw Printhead *@
	<circle cx="@X" cy="@Y" r="10" fill="var(--bs-primary-text-emphasis)" />

	@* Position Text *@
	<text x="128" y="250" fill="var(--bs-primary-text-emphasis)" text-anchor="middle" font-size="10">@X @Y @Z</text>
</svg>

@code {
	[Parameter]
	public double X { get; set; }

	[Parameter]
	public double Y { get; set; }

	[Parameter]
	public double Z { get; set; }
}
